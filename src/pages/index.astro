---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      .path {
        pointer-events: none;
        stroke-dasharray: 2500;
        animation: dash 12s;
        animation-direction: reverse;
        animation-timing-function: ease-in-out;
        transform: rotate(-90deg);
      }

      @keyframes dash {
        to {
          stroke-dashoffset: 2540;
        }
      }

      .sticky-info {
        height: fit-content;
        padding: var(--padding);
        padding-right: 0;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        position: sticky;
        top: 40;
        flex-shrink: 0;
      }

      .specialflex {
        display: flex;
      }

      @media (max-width: 1024px) {
        .specialflex {
          display: block;
        }
      }

      .specialinfo {
        max-width: 280px;
        position: unset;
      }

      @media (max-width: 1024px) {
        .specialinfo {
          max-width: none;
          min-width: none;
        }
      }

      .specialmargin {
        position: sticky;
      }

      @media (max-width: 1024px) {
        .specialmargin {
          margin-top: 30px;
          position: unset;
        }
      }
