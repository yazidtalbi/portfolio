                    {project.images.map((image, index) => (
                      <img
                        src={image}
                        alt={`Image ${index + 1} of ${project.title}`}
                        class="w-full rounded-lg h-auto "
                      />
                    ))}
                  </div>
                </div>
              ))
            }
