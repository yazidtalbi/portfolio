        <script>
          document.addEventListener("DOMContentLoaded", function () {
            const form = document.getElementById("form");
            const result = document.getElementById("result");

            // Hide result message initially
            result.style.display = "none";

            form.addEventListener("submit", function (e) {
              e.preventDefault();
              const formData = new FormData(form);
              const object = Object.fromEntries(formData);
              const json = JSON.stringify(object);

              // Show loading message with indigo color
              result.style.display = "block";
              result.classList.remove("text-green-500", "text-red-400");
              result.classList.add("text-indigo-600");
              result.innerHTML = "Please wait...";

              fetch("https://api.web3forms.com/submit", {
                method: "POST",
                headers: {
                  "Content-Type": "application/json",
                  Accept: "application/json",
                },
                body: json,
              })
                .then(async (response) => {
                  let json = await response.json();
                  result.classList.remove("text-indigo-600"); // Remove loading color
                  if (response.status == 200) {
                    result.classList.add("text-green-500"); // Success color
                    result.innerHTML =
                      "Your message was submitted successfully";
                  } else {
                    result.classList.add("text-red-400"); // Error color
                    result.innerHTML = json.message;
                  }
                })
                .catch((error) => {
                  console.log(error);
                  result.classList.remove("text-indigo-600");
                  result.classList.add("text-red-400");
                  result.innerHTML =
                    "Your message was not submitted. Please try again.";
                })
                .finally(() => {
                  form.reset();
                  setTimeout(() => {
                    result.style.display = "none";
                    result.classList.remove("text-green-500", "text-red-400");
                  }, 3000);
                });
            });
          });
        </script>
