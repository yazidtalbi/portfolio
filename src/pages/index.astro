    >
      <!-- Avatar Section Mobile(Bottom Left) -->
      <div
        class="md:hidden block relative right-0 items-center space-y-4 bg-white rounded-lg h-auto z-40 p-4 pt-16"
      >
        <img src="./yzd.png" alt="Avatar" class="h-36" />
        <div class="flex space-x-4 items-center">
          <div>
            <p class="text-gray-900 font-semibold text-2xl tracking-tight">
              Yazid Talbi
            </p>
            <p class="text-gray-600 text-sm tracking-normal">
              Product Designer
            </p>
          </div>
          <a href="#contact-form">
